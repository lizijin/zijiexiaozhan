<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".coroutines.CoroutinesExceptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/coroutines_scope_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoroutineScope"></Button>

        <Button
            android:id="@+id/supervisor_coroutines_scope_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SupervisorCoroutineScope"></Button>



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/throw_exception_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抛异常"></CheckBox>
        <CheckBox
            android:id="@+id/catch_exception_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捕获异常"></CheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoroutineScope"></TextView>

        <TextView
            android:id="@+id/result_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoroutineScope"></TextView>
        <TextView
            android:id="@+id/result_text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoroutineScope"></TextView>

    </LinearLayout>


</LinearLayout>